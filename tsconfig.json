{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/Maze/**/*.ts"],
  "exclude": ["node_modules"]
}
